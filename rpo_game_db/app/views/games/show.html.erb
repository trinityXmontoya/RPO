<h1><%= @game.name %></h1>

<p class="errors"><%= flash[:notice] %></p>

<% @circles.each do %>
<%= content_tag :div, class: "game_1_circle" do %>
<% end %>
<% end %>
<%= @circles %>

<% i=0 %>
<%= form_tag(game_1_guess_path, method:'post') do %>

<% while i<@circles.length %>
<%= select_tag "guess#{i}", options_for_select($colors.each {|color| color})  %>
<% i+=1 %>
<% end %>

<% i=0 %>
<% while i<@circles.length %>
<%= hidden_field_tag "color#{i}", @circles[i] %>
<% i+=1 %>
<% end %>
<br>
<%= submit_tag "Guess!" %>
<br>
<% end %>
