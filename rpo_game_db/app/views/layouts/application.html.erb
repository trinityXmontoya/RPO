<!DOCTYPE html>
<html>
<head>
  <title>RpoGameDb</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- ALLOWS OPTION FOR USERS TO LOGIN, VIEW ACCOUNT, OR LOGOUT -->
  <!-- if there is no current user active, provide login option -->
  <% if session[:user_id]==nil %>
  <%= link_to "Login", '/login' %>
  <% else %>
  <!-- if there is a current active user, provide option to view account -->
  <%= link_to "View Account", user_path(User.find(session[:user_id])) %>
  <% end %>
  <!-- if there is a current active user, provide option to logout -->
  <% if session[:user_id]!=nil %>
  <%= link_to "Logout", '/logout' %>
  <% end %>

  <%= yield %>

</body>
</html>
