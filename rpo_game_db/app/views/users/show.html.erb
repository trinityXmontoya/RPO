<%= @user.username %></h1>

<img src="<%= @user.photo_url %>">

<h3>Score: <%= @user.score %>pts</h3>
<h3>Time Played: <%= @user.time_played %> hours</h3>



<h3>Characters Played:</h3>
<% @characters.each do |character| %>
<%= character.name %>
<br>
<img src="<%= character.photo_url %>">
<br>
<% if current_user == @user %>

  <% total=[] %>

  <% @user.levels.each do |level| %>

    <% if character.levels.include? level%>

      <% total<<level %>

    <% end %>
  <% end %>
<% end %>

      <%= ((total.length)/7.0*100).round %> % Completed
      <br>
      <%= link_to "Resume Game", character_levels_path(character) %>
      <br>
      <br>
<% end %>
<h3>Games Played:</h3>

<% @games.each do |game| %>

<%= game.name %>
<img src="<%= game.photo_url %>">
<% end %>


<%= link_to "Edit this user", edit_user_path(@user) %>
<%= link_to "Delete this user", @user, method: :delete, data: {confirm: "Are you sure you wish to delete this user?\n All account information will be deleted and irretrievable."}  %>

<%= link_to "Back to all users", users_path %>


